---
import Layout from './Layout.astro';
import Nav from '../components/Nav.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
  description: string;
  date?: string;
  slug: string;
}

const { title, description, date, slug } = Astro.props;
---

<Layout title={`${title} - Caipi`} description={description} canonicalPath={`/articles/${slug}/`}>
  <Nav currentPage="articles" />

  <main class="pt-32 pb-16 px-4 md:px-8">
    <article class="max-w-3xl mx-auto">
      <header class="mb-12">
        <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold text-foreground mb-4 leading-tight">{title}</h1>
        <p class="text-xl text-muted-foreground leading-relaxed">{description}</p>
        {date && <p class="text-sm text-muted-foreground mt-4">{date}</p>}
      </header>

      <div class="prose">
        <slot />
      </div>

      <div class="mt-16 pt-8 border-t border-border">
        <a href="/articles" class="text-sm text-primary hover:underline">‚Üê All articles</a>
      </div>
    </article>
  </main>

  <!-- CTA Section -->
  <section class="py-16 px-4 md:px-8 border-t border-border">
    <div class="max-w-2xl mx-auto text-center">
      <h2 class="text-2xl md:text-3xl font-bold text-foreground mb-4">Ready to try Caipi?</h2>
      <p class="text-muted-foreground mb-8">Get a native AI assistant that actually works with your files and computer.</p>
      <a href="/#pricing" class="inline-flex items-center justify-center bg-primary text-primary-foreground px-6 py-3 rounded-lg font-semibold hover:bg-primary/90 transition-colors">
        Download for Mac
      </a>
    </div>
  </section>

  <Footer />
</Layout>

<style is:global>
  .prose {
    color: var(--foreground);
  }

  .prose h2 {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--foreground);
    margin-top: 3rem;
    margin-bottom: 1rem;
  }

  .prose h3 {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--foreground);
    margin-top: 2rem;
    margin-bottom: 0.75rem;
  }

  .prose p {
    color: var(--muted-foreground);
    line-height: 1.75;
    margin-bottom: 1.5rem;
  }

  .prose ul, .prose ol {
    color: var(--muted-foreground);
    margin-bottom: 1.5rem;
    padding-left: 1.5rem;
  }

  .prose ul {
    list-style-type: disc;
  }

  .prose ol {
    list-style-type: decimal;
  }

  .prose li {
    line-height: 1.75;
    margin-bottom: 0.5rem;
  }

  .prose strong {
    color: var(--foreground);
    font-weight: 600;
  }

  .prose a {
    color: var(--primary);
  }

  .prose a:hover {
    text-decoration: underline;
  }

  .prose blockquote {
    border-left: 2px solid var(--primary);
    padding-left: 1.5rem;
    margin: 1.5rem 0;
    font-style: italic;
    color: var(--muted-foreground);
  }

  .prose code {
    background: var(--secondary);
    padding: 0.125rem 0.375rem;
    border-radius: 0.25rem;
    font-size: 0.875rem;
    font-family: ui-monospace, monospace;
    color: var(--foreground);
  }

  .prose pre {
    background: var(--card);
    border: 1px solid var(--border);
    border-radius: 0.5rem;
    padding: 1rem;
    margin-bottom: 1.5rem;
    overflow-x: auto;
  }

  .prose pre code {
    background: transparent;
    padding: 0;
  }

  .prose hr {
    border-color: var(--border);
    margin: 3rem 0;
  }

  .prose table {
    width: 100%;
    margin-bottom: 1.5rem;
    font-size: 0.875rem;
    border-collapse: collapse;
  }

  .prose th {
    text-align: left;
    font-weight: 600;
    color: var(--foreground);
    padding: 0.75rem;
    border-bottom: 1px solid var(--border);
    background: var(--card);
  }

  .prose td {
    color: var(--muted-foreground);
    padding: 0.75rem;
    border-bottom: 1px solid var(--border);
  }

  .prose img {
    border-radius: 0.5rem;
    border: 1px solid var(--border);
    margin: 2rem 0;
  }
</style>
