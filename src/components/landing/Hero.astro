<section class="min-h-screen flex flex-col items-center justify-center px-4 md:px-8 pt-24 pb-16 relative">
  <!-- Ambient glow -->
  <div class="hero-glow"></div>

  <!-- Hero text -->
  <div class="text-center mb-12 md:mb-14 relative z-10">
    <div class="inline-flex items-center gap-2 bg-primary/10 border border-primary/20 px-4 py-1.5 rounded-full text-sm text-primary font-medium mb-8 badge-pulse">
      Now in public alpha
    </div>
    <h1 class="hero-title text-4xl md:text-5xl lg:text-6xl font-bold tracking-tight leading-[1.1] mb-6">
      Stop Chatting.<br/>
      <span class="text-gradient">Start Doing.</span>
    </h1>
    <p class="text-base md:text-lg text-muted-foreground max-w-md mx-auto font-normal leading-relaxed">
      Chat apps just talk. Caipi is a fast, lightweight app for Claude Code â€” so AI can finally do things, not just say things.
    </p>
  </div>

  <!-- Demo Video -->
  <div class="relative z-10 w-full max-w-4xl animate-float-in">
    <div class="video-container">
      <video
        autoplay
        loop
        muted
        playsinline
        preload="auto"
        controls
        poster="/demo-poster.jpg"
        class="demo-video"
      >
        <source src="/demo.mp4" type="video/mp4" />
        Your browser does not support the video tag.
      </video>
    </div>
  </div>

  <!-- Scroll indicator -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 flex flex-col items-center gap-2 text-muted-foreground text-xs animate-bounce-subtle">
    <svg class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <path d="M12 5v14M19 12l-7 7-7-7"/>
    </svg>
  </div>
</section>

<style>
  .hero-title {
    letter-spacing: -0.03em;
  }

  .video-container {
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 25px 50px -12px rgb(0 0 0 / 0.25);
    border: 1px solid rgba(255, 255, 255, 0.15);
    background: var(--background);
  }

  .demo-video {
    display: block;
    width: 100%;
    height: auto;
  }
</style>
